<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mayikt.mapper.SysRoleMapper">
    <resultMap id="BaseResultMap" type="sysRole">
        <id column="role_id" jdbcType="BIGINT" property="roleId" />
        <result column="role_name" jdbcType="VARCHAR" property="roleName" />
        <result column="role_type" jdbcType="TINYINT" property="roleType" />
        <result column="status" jdbcType="CHAR" property="status" />
        <result column="remark" jdbcType="VARCHAR" property="remark" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    </resultMap>

    <select id="getRoles" parameterType="java.lang.Long"
            resultMap="cn.dingxin.csg.cloud.system.dao.SysRoleMapper.BaseResultMap">
        SELECT
        t1.*
        FROM
            sys_role t1
        LEFT JOIN sys_user_role t2 ON t1.role_id = t2.role_id
        LEFT JOIN sys_user t3 ON t2.user_id = t3.user_id
        WHERE
            t3.user_id = #{userId} and t1.status=0
        GROUP BY
            t1.role_id
    </select>

</mapper>